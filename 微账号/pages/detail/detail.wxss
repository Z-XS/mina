page {
  height: 100%;
  background: #F8F8F8;
  font-size: 11pt;
}
.form {
  padding-left: 5%;
  padding-top: 300rpx;
}
text {
  color: rgba(128, 125, 125, 0.979);
}
.line {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #CCC;
}
.line .left {
  float: left;
  width: 150rpx;
}
.line .right {
  flex: 1;
  padding:0 10rpx 0 30rpx;
}
.line image {
  width: 60rpx;
  height: 60rpx;
}
.line .right input {
  width: 100%;
  height: 50rpx;
  background-color: transparent;
  border: 0;
  outline: 0;
}
.line:last-of-type {
  padding-top: 24rpx;
  justify-content: space-around;
}
.line button {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 10rpx;
}